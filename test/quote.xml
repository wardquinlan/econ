<context>
  <panel label="T10Y3M"
         dxincr="1"
         frequency="months">
         
    <chart label="10 Year Treasury Const Maturity - 3 Month Treasury Const Maturity"
           scale="log" 
           span="70">

      <series ref="SP500"/>
      <series ref="RECESSION" color="LightCyan"/>
    </chart>

    <chart label="T10Y3M"
           ngridlines="6"
           scale="linear"
           span="30">

      <series ref="T10Y3M" color="Red"/>
      <series ref="INV" color="Yellow"/>
    </chart>
  </panel>

  <panel label="TBOND1" 
         dxincr="1"
         frequency="months">

    <chart label="1 Year Treasury Const Maturity"
           scale="log"
           span="70">

      <series ref="SP500"/>
      <series ref="RECESSION" color="LightCyan"/>
    </chart>

    <chart label="TBOND1"
           ngridlines="10"
           span="30">

      <series ref="TBOND1" color="Red"/>
      <series ref="FC" color="Blue"/>
    </chart>
  </panel>

  <panel label="VIX"
         dxincr="1"
         frequency="months">

    <chart label="CBOE Volatility Index"
           scale="log"
           span="70">

      <series ref="SP500"/>
      <series ref="RECESSION" color="LightCyan"/>
      <series ref="VOL" color="Yellow"/>
    </chart>

    <chart label="VIX"
           ngridlines="10"
           span="30">

      <series ref="VIX" color="Red"/>
    </chart>
  </panel>

  <panel label="MKCAPGDP"
         dxincr="1"
         frequency="months">

    <chart label="Market Cap to GDP"
           scale="log"
           span="70">

      <series ref="SP500"/>
      <series ref="AVG" color="Red"/>
      <series ref="RECESSION" color="LightCyan"/>
    </chart>

    <chart label="MKCAPGDP"
           ngridlines="10"
           span="30">

      <series ref="MKCAPGDP" color="Red"/>
    </chart>
  </panel>

  <panel label="NFCI"
         dxincr="1"
         frequency="months">

    <chart label="Chicago Fed National Financial Conditions Index"
           scale="log"
           span="70">

      <series ref="SP500"/>
      <series ref="RECESSION" color="LightCyan"/>
    </chart>

    <chart label="NFCI"
           ngridlines="10"
           span="30">

      <series ref="NFCI" color="Red"/>
    </chart>
  </panel>

  <panel label="QSALES"
         dxincr="1"
         frequency="months">

    <chart label="Quarterly Sales per Share"
           scale="log"
           span="70">

      <series ref="SP500"/>
      <series ref="RECESSION" color="LightCyan"/>
    </chart>

    <chart label="Price / Sales"
           ngridlines="10"
           span="30">

      <series ref="PS" color="Red"/>
    </chart>
  </panel>

  <panel label="USD"
         dxincr="1"
         frequency="months">

    <chart label="Nominal Broad U.S. Dollar Index"
           scale="log"
           span="70">

      <series ref="SP500"/>
      <series ref="RECESSION" color="LightCyan"/>
    </chart>

    <chart label="USD"
           ngridlines="10"
           span="30">

      <series ref="USD" color="Red"/>
    </chart>
  </panel>

  <panel label="RRP"
         dxincr="1"
         frequency="months">

    <chart label="Overnight Reverse Repos: Treasury Securities sold by the Federal Reserve"
           scale="log"
           span="70">

      <series ref="SP500"/>
      <series ref="RECESSION" color="LightCyan"/>
    </chart>

    <chart label="RRP"
           ngridlines="10"
           span="30">

      <series ref="RRP" color="Red"/>
    </chart>
  </panel>
</context>

